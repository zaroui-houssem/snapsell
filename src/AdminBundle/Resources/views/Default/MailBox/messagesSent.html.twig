                              <div class="box-header with-border">
                                  <h3 class="box-title">الملفات</h3>
                              </div>
                              <div class="box-body no-padding">
                                  <ul class="nav nav-pills nav-stacked">
                                      <li ><a href="{{ path('mail_box') }}"><i class="fa fa-inbox"></i> البريد الوارد
                                              {% if nb_msg_no_read!=0 %}
                                                  <span class="label label-primary pull-left">{{ nb_msg_no_read }}</span>
                                              {% endif %}
                                          </a></li>
                                      <li class="active"><a href="#"><i class="fa fa-envelope-o"></i> البريد المرسل </a></li>

                                  </ul>
                              </div><!-- /.box-body -->
                          </div><!-- /. box -->

                      </div><!-- /.col -->
                      <div class="col-md-9">
                          <div class="box box-primary">
                              <div class="box-header with-border">
                                  <h3 class="box-title">البريد المرسل</h3>

                              </div><!-- /.box-header -->
                              <div class="box-body ">
                                  {% if messages|length==0 %}
                                  <table class="table table-hover table-striped">
                                      <tbody>
                                      <tr>
                                          <td colspan="4" style="text-align: center;">لا توجد رسائل</td>
                                      </tr>
                                      </tbody>
                                  </table>

                                  {% else %}
                                  <table id="example1" class="table table-hover table-striped">
                                      <thead>
                                      <tr>
                                          <th> </th>
                                          <th> المتسلم </th>
                                          <th>الموضوع</th>
                                          <th> تاريخ الإرسال</th>

                                      </tr>
                                      </thead>
                                      <tbody>


                                      {% for message in messages %}
                                          <tr>
                                              <td><Button type="button" data-toggle="modal" data-target=".{{'class'~message.id }}"  class="btn btn-default btn-xs"><i class="fa fa-trash-o"></i></Button></td>
                                              <td class="mailbox-name"><a href="{{ path('read_mail',{'id':message.id}) }}">{{ message.receiver.username }}</a></td>
                                              <td class="mailbox-subject">

                                                  {{ message.subject }}

                                              </td>
                                              <td class="mailbox-date">{{ message.date|date('F j, Y')  }}</td>

                                          </tr>
                                      {% endfor %}
                                      </tbody>

                                  </table>
                                  {% endif %}
                              </div><!-- /.box-body -->

                          </div>

                      </div><!-- /.col -->
                  </div><!-- /.row -->
