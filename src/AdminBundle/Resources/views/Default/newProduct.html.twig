{% extends '::base.html.twig' %}
{% block title %}إضافة مادة{% endblock %}
{% block activeProduct %} class="active" {% endblock %}
{%block activeNewProduct %}class="active"{% endblock %}
{% block body -%}
    <div id="page-wrapper">
        <div class="container-fluid">
            <section class="content">
            <div class="row">
                <div class="col-lg-12">
                    <ol class="breadcrumb">

                        <li class="active">
                            <a href="{{ path('get_products') }}">
                                <i class="fa fa-shopping-cart" style="margin-left: 5px;"></i>قائمة المواد
                            </a>
                        </li>
                        <li>
                            <i class="fa fa-pencil " ></i>    إضافة مادة
                        </li>
                    </ol>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <h3>أضف مادة للبيع</h3>
                </div>
            </div>
            <div class="row">

                <div class="col-lg-8 form-frame">

                    {{ form_start(form, {'action': path('new_product'), 'method': 'POST'}) }}
                        <div class="form-group">
                            <label  class="control-label">إسم المادة</label>
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>
                        <div class="form-group">
                            <label  class="control-label">السعر</label>
                            {{ form_widget(form.price) }}
                            <span style="color: red"> {{ form_errors(form.price) }} </span>
                        </div>
                        <div class="form-group " >
                            <label for="name" class="control-label">نوع العرض</label>
                            {{ form_widget(form.offerType) }}
                        </div>
                        <div class="form-group">
                            <label  class="control-label">الوصف</label>
                            {{ form_widget(form.description) }}
                            {{ form_errors(form.description) }}
                        </div>
                        <div class="form-group">
                            <label  class="control-label">نوع المادة</label>
                            {{ form_widget(form.hashtags) }}
                            {{ form_errors(form.hashtags) }}
                        </div>

                        <div class="form-group ">
                            <label class="control-label">البائع</label>
                            {{ form_widget(form.seller) }}
                        </div>
                        <div class="form-group">
                            <label class="control-label">اضف صورة او مقطع فيديو</label>
                            {{ form_widget(form.media) }}

                        </div>
                        <div class="form-group">
                            {{ form_widget(form.save, { 'label': 'حفظ' }) }}
                        </div>
                    {{ form_end(form)  }}

                </div>


            </div>
        </section>
        </div>
    </div>
{% endblock %}

